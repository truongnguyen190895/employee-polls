{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2015", "es2017"],
    "allowJs": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest"],
    "outDir": "./build",
    "rootDir": "./src",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "types"]
}
